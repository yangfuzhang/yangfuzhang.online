---
import "../styles/global.css";
import SiteHeader from "../components/SiteHeader.astro";

interface Props {
  title: string;
}

const environment = import.meta.env.MODE;
const { title } = Astro.props;
---

<!doctype html>
<html lang="zh" class="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="码农代码笔记" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-w-screen min-h-screen bg-linear-to-t from-secondary to-white">
    <main class="min-h-screen max-w-[960px] p-4 m-auto flex flex-col items-center">
      <!-- 菜单 -->
      <SiteHeader />

      <!-- 内容区域 -->
      <slot />
    </main>

    <!-- Umami统计代码 -->
    {
      environment === "production" && (
        <script
          is:inline
          async
          src="https://stat.yangfuzhang.online/script.js"
          data-website-id="99a18c70-6364-4662-8b20-ddf952491614"
        />
      )
    }
    <!-- Google 统计代码 -->
    {
      environment === "production" && (
        <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-YP9E61N6BB"></script>
        <script is:inline>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());

          gtag('config', 'G-YP9E61N6BB');
        </script>
      )
    }
    <!-- 谷歌广告 -->
    <!-- <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9752931686372898"
      crossorigin="anonymous"></script> -->
  </body>
</html>