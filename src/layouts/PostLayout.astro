---
import Layout from '../layouts/BaseLayout.astro';

const { frontmatter } = Astro.props;
---
<Layout title={frontmatter.title}>
	<article>
    <h2 class="title">{frontmatter.title}</h2>
    <p class="subtitle">
      <span class="text-gradient">{frontmatter.pubDate} Â· {frontmatter.minutesRead}</span>
    </p>
    <slot />

    <a href={frontmatter.prevUrl}>
      <span class="text-gradient">&gt; cd ..</span>
    </a>
	</article>
</Layout>

<style>
	article {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: var(--primary-text-color);
		font-size: 16px;
		line-height: 1.6;
	}

  .title {
    margin: 0;
  }

  .subtitle {
    margin: 0.1rem;
    font-size: 14px;
  } 
</style>
